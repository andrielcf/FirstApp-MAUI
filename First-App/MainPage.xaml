<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="First_App.MainPage">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="GERADOR DE PESSOA"/>

        <VerticalStackLayout Padding="20" Spacing="10">
            <Button Text="Gerar pessoa" Clicked="consultPerson" />

            <Label x:Name="NameLabel" FontSize="18" FontAttributes="Bold" />
            <Label x:Name="EmailLabel" FontSize="16" />
            <Label x:Name="PhoneLabel" FontSize="16" />
            <Label x:Name="LocationLabel" FontSize="16" />
        </VerticalStackLayout>

    </VerticalStackLayout>

</ContentPage>