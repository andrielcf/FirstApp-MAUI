<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="First_App.MainPage">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">
        <Button Text="Alerta Simples" Clicked="OnSimpleAlertClicked" BackgroundColor="DodgerBlue" TextColor="White" CornerRadius="10" Padding="10"/>
        <Button Text="Alerta de Confirmação" Clicked="OnConfirmationAlertClicked" BackgroundColor="MediumSeaGreen" TextColor="White" CornerRadius="10" Padding="10"/>
        <Button Text="Alerta com Entrada de Texto" Clicked="OnPromptClicked" BackgroundColor="Orange" TextColor="White" CornerRadius="10" Padding="10"/>
        <Button Text="Ir para Segunda Página" Clicked="OnNavigateClicked" BackgroundColor="Crimson" TextColor="White" CornerRadius="10" Padding="10"/>
    </StackLayout>

</ContentPage>
